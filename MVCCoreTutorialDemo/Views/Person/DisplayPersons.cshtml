@model IEnumerable<MVCCoreTutorialDemo.Models.Domain.Person>
@{
}

<div class="mt-2" style="width: 50%">
    <div class="row">
        <h2>Person List</h2>
        <div class="col-md-4">
            <a href ="/Person/AddPerson" class="btn btn-primary">Add Person</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>

                @foreach (var person in Model)
                {
                    <tr>
                        <td>
                            @person.Name
                        </td>
                        <td>
                            @person.Email
                        </td>
                        <td>
                            <a class="btn btn-success" href="/Person/EditPerson?id=@person.Id">Edit</a>
                            <a class="btn btn-danger" href="/Person/DeletePerson?id=@person.Id">Delete</a>
                        </td>
                    </tr>
                }
            </thead>

        </table>
    </div>

</div>

